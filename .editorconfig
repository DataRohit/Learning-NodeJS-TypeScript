root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,json,yml,yaml,html,css,scss}]
indent_size = 2

[*.py]
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{png,jpg,jpeg,gif,webp,svg,ico}]
insert_final_newline = false
trim_trailing_whitespace = false
