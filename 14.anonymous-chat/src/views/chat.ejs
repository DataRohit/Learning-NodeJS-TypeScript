<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CHAT // <%= code %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #0a0a0a;
            --fg: #e0e0e0;
            --accent: #00ff41;
            --gray: #333;
            --err: #ff4141;
        }
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        body {
            background-color: var(--bg);
            color: var(--fg);
            font-family: 'JetBrains Mono', monospace;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }
        header {
            padding: 1rem;
            border-bottom: 1px solid var(--gray);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #111;
        }
        .session-info {
            font-size: 0.8rem;
        }
        .code { color: var(--accent); font-weight: bold; }

        #chat-window {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .message {
            max-width: 80%;
            padding: 0.5rem 0.8rem;
            border: 1px solid var(--gray);
            font-size: 0.9rem;
            position: relative;
        }
        .message.self {
            align-self: flex-end;
            border-color: var(--accent);
            background: rgba(0, 255, 65, 0.05);
        }
        .message.system {
            align-self: center;
            border: none;
            color: #666;
            font-size: 0.7rem;
            text-transform: uppercase;
        }
        .sender {
            font-size: 0.7rem;
            color: #666;
            margin-bottom: 2px;
        }

        footer {
            padding: 1rem;
            border-top: 1px solid var(--gray);
            background: #111;
        }
        .input-area {
            display: flex;
            gap: 1rem;
        }
        input {
            flex: 1;
            padding: 0.8rem;
            background: transparent;
            border: 1px solid var(--gray);
            color: var(--fg);
            font-family: inherit;
            outline: none;
        }
        input:focus { border-color: var(--accent); }

        button {
            padding: 0 1.5rem;
            background: var(--gray);
            color: var(--fg);
            border: none;
            font-family: inherit;
            cursor: pointer;
            text-transform: uppercase;
            font-weight: bold;
        }
        button:hover { background: var(--accent); color: #000; }
        button.close-btn { background: var(--err); color: #fff; }
        button.close-btn:hover { background: #ff0000; }

        #timer {
            font-variant-numeric: tabular-nums;
            color: var(--accent);
        }
    </style>
</head>
<body>
    <header>
        <div class="session-info">
            SESSION: <span class="code"><%= code %></span> |
            TIME LEFT: <span id="timer">--:--</span>
        </div>
        <div>
            <% if (isOwner) { %>
                <button onclick="closeSession()" class="close-btn">CLOSE SESSION</button>
            <% } else { %>
                <button onclick="leaveSession()">LEAVE</button>
            <% } %>
        </div>
    </header>

    <div id="chat-window">
        <div class="message system">SESSION STARTED. ENCRYPTED. ANONYMOUS.</div>
        <% if (messages && messages.length > 0) { %>
            <% messages.forEach(msg => { %>
                <div class="message <%= msg.senderId === userId ? 'self' : '' %>">
                    <div class="sender"><%= msg.senderId.substring(0, 6) %>...</div>
                    <div class="text"><%= msg.text %></div>
                </div>
            <% }) %>
        <% } %>
    </div>

    <footer>
        <div class="input-area" style="margin-bottom: 0.5rem; justify-content: center;">
            <button onclick="copyLink()" style="font-size: 0.7rem; padding: 0.3rem 0.6rem;">COPY SESSION LINK</button>
        </div>
        <form id="chat-form" class="input-area">
            <input type="text" id="msg-input" placeholder="TYPE MESSAGE..." autocomplete="off" required>
            <button type="submit">SEND</button>
        </form>
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const code = "<%= code %>";
        const userId = "<%= userId %>";
        const expiresAt = new Date("<%= expiresAt %>").getTime();

        const chatWindow = document.getElementById('chat-window');
        const chatForm = document.getElementById('chat-form');
        const msgInput = document.getElementById('msg-input');
        const timerDisplay = document.getElementById('timer');

        // Scroll to bottom on load
        chatWindow.scrollTop = chatWindow.scrollHeight;

        function copyLink() {
            const url = window.location.origin + "/join?code=" + code;
            navigator.clipboard.writeText(url).then(() => {
                alert("LINK COPIED TO CLIPBOARD");
            });
        }

        socket.emit('join-session', { code, userId });

        function updateTimer() {
            const now = Date.now();
            const diff = expiresAt - now;

            if (diff <= 0) {
                timerDisplay.innerText = "00:00";
                alert("SESSION EXPIRED");
                window.location.href = "/";
                return;
            }

            const mins = Math.floor(diff / 60000);
            const secs = Math.floor((diff % 60000) / 1000);
            timerDisplay.innerText = `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        setInterval(updateTimer, 1000);
        updateTimer();

        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const text = msgInput.value.trim();
            if (text) {
                socket.emit('send-message', { code, userId, text });
                msgInput.value = '';
            }
        });

        socket.on('receive-message', (data) => {
            const msgDiv = document.createElement('div');
            msgDiv.classList.add('message');
            if (data.senderId === userId) msgDiv.classList.add('self');

            msgDiv.innerHTML = `
                <div class="sender">${data.senderId.substring(0, 6)}...</div>
                <div class="text">${data.text}</div>
            `;
            chatWindow.appendChild(msgDiv);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        });

        socket.on('session-closed', () => {
            alert("OWNER CLOSED THE SESSION");
            window.location.href = "/";
        });

        socket.on("user-joined", (data) => {
            const msgDiv = document.createElement('div');
            msgDiv.classList.add('message', 'system');
            msgDiv.innerText = `USER ${data.userId.substring(0, 6)} JOINED`;
            chatWindow.appendChild(msgDiv);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        });

        socket.on("user-left", (data) => {
            const msgDiv = document.createElement('div');
            msgDiv.classList.add('message', 'system');
            msgDiv.innerText = `USER ${data.userId.substring(0, 6)} LEFT`;
            chatWindow.appendChild(msgDiv);
            chatWindow.scrollTop = chatWindow.scrollHeight;
        });

        function closeSession() {
            if (confirm("REALLY CLOSE SESSION FOR EVERYONE?")) {
                socket.emit('close-session', { code, userId });
            }
        }

        function leaveSession() {
            window.location.href = "/";
        }
    </script>
</body>
</html>
