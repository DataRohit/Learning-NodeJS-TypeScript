<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskMaster Pro | Next-Gen MongoDB</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.1);
            --accent: #818cf8;
            --accent-glow: rgba(129, 140, 248, 0.4);
            --danger: #fb7185;
            --success: #34d399;
            --text-primary: #f8fafc;
            --text-muted: #94a3b8;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Outfit', sans-serif; }

        body {
            min-height: 100vh;
            background: var(--bg-gradient);
            background-attachment: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
            color: var(--text-primary);
            overflow-x: hidden;
        }

        .app-card {
            width: 100%;
            max-width: 540px;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 2rem;
            padding: 2.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }

        .header { text-align: center; margin-bottom: 2.5rem; }
        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(to right, #fff, var(--accent));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .user-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding: 0.75rem 1.25rem;
            background: rgba(255,255,255,0.05);
            border-radius: 1rem;
        }

        .logout-btn {
            background: none;
            border: none;
            color: var(--danger);
            cursor: pointer;
            font-weight: 600;
            font-size: 0.9rem;
        }

        #live-clock {
            font-size: 0.9rem;
            color: var(--text-muted);
            letter-spacing: 0.1em;
            text-transform: uppercase;
            font-weight: 600;
        }

        .input-group {
            display: flex;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 1.25rem;
            padding: 0.4rem;
            margin-bottom: 2rem;
        }

        input[type="text"] {
            flex: 1;
            background: transparent;
            border: none;
            outline: none;
            color: #fff;
            padding: 0.8rem 1.25rem;
            font-size: 1.1rem;
        }

        .btn-add {
            background: var(--accent);
            color: #fff;
            border: none;
            border-radius: 1rem;
            padding: 0 1.5rem;
            font-weight: 700;
            cursor: pointer;
        }

        .todo-list { list-style: none; display: flex; flex-direction: column; gap: 1rem; }

        .todo-item {
            display: flex;
            align-items: center;
            padding: 1.25rem;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border);
            border-radius: 1.25rem;
            transition: all 0.3s ease;
        }

        .todo-text { flex: 1; font-size: 1.1rem; }
        .todo-text.completed { text-decoration: line-through; color: var(--text-muted); opacity: 0.6; }

        .actions { display: flex; gap: 0.75rem; }
        .btn-action {
            width: 38px;
            height: 38px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            background: rgba(255, 255, 255, 0.05);
        }

        .btn-toggle:hover { background: var(--success); color: #000; }
        .btn-toggle.is-completed:hover { background: var(--text-muted); color: #fff; }
        .btn-delete:hover { background: var(--danger); }
    </style>
</head>
<body>
    <div class="app-card">
        <header class="header">
            <h1>TaskMaster</h1>
            <div id="live-clock">--:--:--</div>
        </header>

        <div class="user-info">
            <span>Hi, <strong><%= user.username %></strong></span>
            <form action="/logout" method="POST">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>

        <form action="/add" method="POST">
            <div class="input-group">
                <input type="text" name="task" placeholder="Whatcha gonna do today?" required autocomplete="off">
                <button type="submit" class="btn-add">Add</button>
            </div>
        </form>

        <ul class="todo-list">
            <% todos.forEach(todo => { %>
                <li class="todo-item">
                    <span class="todo-text <%= todo.completed ? 'completed' : '' %>">
                        <%= todo.task %>
                    </span>
                    <div class="actions">
                        <form action="/toggle/<%= todo._id %>" method="POST">
                            <button type="submit" class="btn-action btn-toggle <%= todo.completed ? 'is-completed' : '' %>">
                                <% if (todo.completed) { %>
                                    <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M12.5 8c-2.65 0-5.05 1-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"/></svg>
                                <% } else { %>
                                    <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/></svg>
                                <% } %>
                            </button>
                        </form>
                        <form action="/delete/<%= todo._id %>" method="POST">
                            <button type="submit" class="btn-action btn-delete">
                                <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg>
                            </button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <script>
        const updateClock = () => {
            const now = new Date();
            document.getElementById('live-clock').textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true });
        };
        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>
